{
  // Server authentication info
  "servers": [
    {
      //"host": "192.168.2.3",
      "host": "spa.tial.ly",
      "username": "kyle",
      "password": "lemonade"
      // or pem file (ssh based authentication)
      //"pem": "~/.ssh/id_rsa"
    }
  ],

  // Install MongoDB in the server, does not destroy local MongoDB on future setup
  "setupMongo": true,

  // WARNING: Node.js is required! Only skip if you already have Node.js installed on server.
  "setupNode": false,

  // WARNING: If nodeVersion omitted will setup 0.10.36 by default. Do not use v, only version number.
  "nodeVersion": "0.10.25",

  // Install PhantomJS in the server
  "setupPhantom": false,

  // Show a progress bar during the upload of the bundle to the server. 
  // Might cause an error in some rare cases if set to true, for instance in Shippable CI
  "enableUploadProgressBar": true,

  // Application name (No spaces)
  "appName": "SARCAT",

  // Location of app (local directory)
  "app": "~/Users/KyleK/github/SARCAT/app2",

  // Configure environment
  "env": {
    "MONGO_URL":"mongodb://127.0.0.1:27017",
    //"ROOT_URL": "http://spa.tial.ly.com",
    "ROOT_URL": "localhost.com",
    "PORT":3005,
    "METEOR_SETTINGS": "~/Users/KyleK/github/SARCAT/app2/settings.json"
  },
//MONGO_URL=mongodb://127.0.0.1:27017 ROOT_URL=http://localhost.com PORT=3000 METEOR_SETTINGS=$(cat settings.dev.json) node main.js
  // Meteor Up checks if the app comes online just after the deployment
  // before mup checks that, it will wait for no. of seconds configured below
  "deployCheckWaitTime": 30
}
